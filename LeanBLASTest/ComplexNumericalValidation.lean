/-- Test zdotu (unconjugated dot product) -/
def test_zdotu_robust : IO Bool := do
  IO.println "\n=== Testing zdotu with known test vectors ==="

  let mut allPassed := true
  let mut i := 0

  for testCase in knownTestVectors do
    IO.println s!"\nTest case {i + 1}: size = {testCase.size}"

    let result := unconjugatedDot testCase.size testCase.x 0 1 testCase.y 0 1
    let passed := complexApproxEq result testCase.zdotu_expected

    IO.println s!"  Expected: {testCase.zdotu_expected}"
    IO.println s!"  Got:      {result}"
    IO.println s!"  Status:   {if passed then "‚úì PASS" else "‚úó FAIL"}"

    if !passed then
      allPassed := false
      let diff_re := Float.abs (result.re - testCase.zdotu_expected.re)
      let diff_im := Float.abs (result.im - testCase.zdotu_expected.im)
      IO.println s!"  Error:    |Œî_re| = {diff_re}, |Œî_im| = {diff_im}"
    i := i + 1

  return allPassed


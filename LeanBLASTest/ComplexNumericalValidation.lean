    -- conj(1)*(3+4i) + conj(2+i)*(1-2i) = (3+4i) + (2-i)*(1-2i) = (3+4i) + (0-5i) = 3 - i
    zdotc_expected := ‚ü®3.0, -1.0‚ü©,
